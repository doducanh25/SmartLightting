<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_bar_title"
        android:background="@color/background_bar"
        android:orientation="horizontal"
        android:alpha="1"
        android:weightSum="3">

        <ImageView
            android:id="@+id/back_detail_script"
            android:layout_width="@dimen/image_logout_size"
            android:layout_height="@dimen/image_logout_size"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_back"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="2.8"
            android:layout_marginLeft="@dimen/default_margin"
            >
            <ImageView
                android:layout_width="@dimen/image_logo_size_setting_group"
                android:layout_height="@dimen/image_logo_size_setting_group"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/setting_script_setting_screen"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_title"
                android:textStyle="italic"
                android:layout_margin="5dp"/>
        </LinearLayout>



        <ImageView
            android:id="@+id/send_api_script"
            android:layout_width="@dimen/image_logout_size"
            android:layout_height="@dimen/image_logout_size"
            android:layout_gravity="center|right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_logout"
            android:layout_weight="0.1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_view_bar"/>

    <ListView
        android:id="@+id/list_detail_script"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
