<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_bar">
    <RelativeLayout
        android:id="@+id/layout_add_group_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_title_select"
        android:alpha="0.5"
        android:visibility="visible">
        <ImageView
            android:id="@+id/add_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:layout_margin="@dimen/default_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tao Nhom Moi"
            android:layout_toEndOf="@+id/add_group"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_while"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_item_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_title_select"
        android:alpha="0.5"
        android:weightSum="2"
        android:visibility="gone">
        <EditText
            android:id="@+id/input_name_group"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:padding="3dp"
            android:inputType="number"/>
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_next"
            android:layout_margin="10dp"/>

    </LinearLayout>


</RelativeLayout>
