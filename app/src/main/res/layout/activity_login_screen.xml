<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_bar_title"
        android:background="@color/background_title_select"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_login_screen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/icon"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_app"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            android:textStyle="italic" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_view_bar"/>

    <EditText
        android:id="@+id/input_pass_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/border_background_edittext"
        android:hint="@string/input_pass_login"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="@dimen/text_size"/>
    
    <Button
        android:id="@+id/accept_pass_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_accept_pass_login_screen_height"
        android:layout_marginTop="@dimen/button_accept_pass_login_screen_margin_top"
        android:layout_marginRight="@dimen/button_accept_pass_login_screen_margin_right"
        android:layout_marginLeft="@dimen/button_accept_pass_login_screen_margin_right"
        android:background="@drawable/button_round"
        android:text="@string/button_ok_screen_login"
        android:textColor="@color/text_while"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        >
    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_hone"
        android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtCredits"
            android:layout_toRightOf="@id/iv_home"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/default_margin"
            android:textColor="@color/text_color_button"
            android:textSize="@dimen/text_size"/>
    </RelativeLayout>
</LinearLayout>
