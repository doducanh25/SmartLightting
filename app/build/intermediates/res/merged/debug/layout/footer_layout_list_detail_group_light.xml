<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_bar">
    <RelativeLayout
        android:id="@+id/layout_add_light_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_title_select"
        android:alpha="0.5"
        android:visibility="visible">
        <ImageView
            android:id="@+id/add_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:layout_margin="@dimen/default_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_light_to_group"
            android:layout_toEndOf="@+id/add_light"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_while"/>
    </RelativeLayout>
</LinearLayout>
