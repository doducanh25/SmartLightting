<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_bar">
    <LinearLayout
        android:id="@+id/ll_item_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_item_group"
        android:alpha="0.5"
        android:weightSum="3">
        <ImageView
            android:id="@+id/iv_detele"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_recycle_bin"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/name_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhom ..."
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/text_while"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/default_margin"/>
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_next"
            android:layout_margin="10dp"/>

    </LinearLayout>
</LinearLayout>
